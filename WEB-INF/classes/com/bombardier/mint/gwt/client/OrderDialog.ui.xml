<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

	<ui:style>
	.textArea {
		resize: none;
	}
	.cancelButton {
		resize: none;
	}
	</ui:style>

	<b:Modal closable='false' dataBackdrop='STATIC' ui:field='dialog'>
		<b:ModalHeader>
			<g:Label>Order</g:Label>
		</b:ModalHeader>
		<b:ModalBody>
			<b:Form>
				<b:FieldSet>
					<b:FormGroup>
						<b:TextArea ui:field='textArea' b:id='orderInformation'
							addStyleNames='{style.textArea}' />
					</b:FormGroup>

					<b:Button icon='SPINNER' iconSpin='true' ui:field='cancelButton' type='PRIMARY' addStyleNames='pull-right {style.cancelButton}'>Cancel</b:Button>
				</b:FieldSet>
			</b:Form>
		</b:ModalBody>
	</b:Modal>
</ui:UiBinder>