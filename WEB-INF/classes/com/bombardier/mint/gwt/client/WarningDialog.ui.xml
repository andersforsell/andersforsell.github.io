<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
    <b:Modal closable='true' ui:field='dialog'>
        <b:ModalHeader>
            <g:Label>Warning</g:Label>
        </b:ModalHeader>
        <b:ModalBody>
            <b:Form>
                <b:FieldSet>
                    <b:FormGroup>
                        <b:TextArea ui:field='textArea' b:id='serverAddress' />
                    </b:FormGroup>

                    <b:Button ui:field='okButton' type='PRIMARY' addStyleNames='pull-right'>OK</b:Button>
                </b:FieldSet>
            </b:Form>
        </b:ModalBody>
    </b:Modal>
</ui:UiBinder>
