<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
	xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
	<ui:style type='com.bombardier.mint.gwt.client.IoDialog.Style'>
		.header {
		font-weight:bold;
		}
		.datagrid {
		width:980px;
		height:380px;
		margin-top:10px; 
		}
	</ui:style>
	<ui:with field='resources'
		type='com.bombardier.mint.gwt.client.resources.ClientResources' />
	<b:Modal closable='true' ui:field='dialog'>
		<b:ModalHeader>
			<g:Label ui:field='headerLabel' addStyleNames='{style.header}'></g:Label>
		</b:ModalHeader>
		<b:ModalBody>
			<b:gwt.DataGrid ui:field='dataGrid' addStyleNames='{style.datagrid}'/>
		</b:ModalBody>
	</b:Modal>
</ui:UiBinder>