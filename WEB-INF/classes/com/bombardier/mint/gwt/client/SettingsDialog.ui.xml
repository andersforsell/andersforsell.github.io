<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	<b:Modal closable='true' ui:field='dialog'>
		<b:ModalHeader>
			<g:Label>Settings</g:Label>
		</b:ModalHeader>
		<b:ModalBody>
			<b:Form>
				<b:FieldSet>
					<b:FormGroup>
						<b:FormLabel for='serverAddress'>Server Address</b:FormLabel>
						<b:TextBox ui:field='serverAddress' b:id='serverAddress' />
					</b:FormGroup>
					<b:FormGroup>
						<b:FormLabel for='timeout'>Server Request Timeout [ms]</b:FormLabel>
						<b:TextBox ui:field='timeout' b:id='timeout' />
					</b:FormGroup>
					
					<b:FormGroup>
						<b:FormLabel for='logLevel'>Log Level</b:FormLabel>
						<b:ListBox ui:field='logLevel' b:id='logLevel'>
							<b:item value='1'>
								SEVERE
							</b:item>
							<b:item value='2'>
								WARNING
							</b:item>
							<b:item value='3'>
								INFO
							</b:item>
							<b:item value='4'>
								CONFIG
							</b:item>
							<b:item value='5'>
								FINE
							</b:item>
							<b:item value='6'>
								FINER
							</b:item>
							<b:item value='7'>
								FINEST
							</b:item>
							<b:item value='8'>
								ALL
							</b:item>
							<b:item value='9'>
								OFF
							</b:item>
						</b:ListBox>
					</b:FormGroup>
					<b:Button ui:field='okButton' type='PRIMARY' addStyleNames='pull-right'>Apply</b:Button>
				</b:FieldSet>
			</b:Form>
		</b:ModalBody>
	</b:Modal>
</ui:UiBinder>