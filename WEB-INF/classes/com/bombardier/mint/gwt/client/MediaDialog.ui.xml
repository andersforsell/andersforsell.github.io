<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
	<ui:style>
	.media-list {
		
	}
	
	.capture-button {
		margin-right: 5px;
	}
	</ui:style>
	<b:Modal closable='true' ui:field='dialog'>
		<b:ModalHeader>
			<g:Label ui:field='mediaDialogLabel' />
		</b:ModalHeader>
		<b:ModalBody>
			<b:Form>
				<b:FieldSet>
					<g:ScrollPanel width='100%' height='450px'>
						<c:CellList addStyleNames='{style.media-list}'
							ui:field='mediaList' height='100%'></c:CellList>
					</g:ScrollPanel>
				</b:FieldSet>
				<b:FieldSet>
					<b:Button ui:field='imageButton' icon='IMAGE'
						addStyleNames='{style.capture-button}'>Take Picture</b:Button>
					<b:Button ui:field='audioButton' icon='MICROPHONE'
						addStyleNames='{style.capture-button}'>Record Audio</b:Button>
					<b:Button ui:field='videoButton' icon='VIDEO_CAMERA'
						addStyleNames='{style.capture-button}'>Record Video</b:Button>
					<b:Button ui:field='deleteButton' icon='REMOVE' type='DANGER'
						addStyleNames='pull-right'>Delete</b:Button>
				</b:FieldSet>
			</b:Form>
		</b:ModalBody>
	</b:Modal>
</ui:UiBinder>
